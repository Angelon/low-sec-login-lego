div#login-container
  div.col-md-4
  div.col-md-4
    div.panel.panel-default
      div.panel-heading Welcome to the app
      div.panel-body
        if messages.length
            div.alert.alert-warning=messages[0]
        form(role="form", ng-controller="LoginCtrl", method="POST", action="/login" id="loginForm")
          div.form-group
            label.control-label(for="emailaddress") Email Address
            input.form-control(type="text", id="emailaddress", placeholder="Email Address", ng-model="data.username", name="username")
            span.control-label.help-block 
              small 
          div.form-group  
            label.control-label(for="password") Password
            input.form-control(type="password", id='password', placeholder="Password", ng-model="data.password", name="password")
            span.control-label.help-block 
              small 
            a(href="/forgotmypassword") Forgot Password?
          div.form-group
            button.btn.btn-primary.btn-block(type="button", ng-click="submit()") Log In
  div.col-md-4
script(type='text/javascript', src='/js/loginCntrl.js')